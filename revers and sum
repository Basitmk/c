// Online C compiler to run C program online
#include <stdio.h>

void main() {
    int i,rev=0;
    int n,mod,sum=0;
    printf("enter your number: ");
    scanf("%d",&n);
    for(i=1;n!=0;i++)
    {
        mod=n%10;
        sum=sum+mod;
        n=n/10;
        rev=(rev*10)+mod;
    }
    {
        printf("sum of digit is %d\n",sum);
    }
    {
    printf("palindrome of mod is: %d",rev);
    }
    }
